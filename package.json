{
  "name": "chibivue",
  "version": "0.1.0",
  "type": "module",
  "author": "ubugeeei",
  "engines": {
    "node": ">=24"
  },
  "packageManager": "pnpm@10.28.0",
  "scripts": {
    "setup": "pnpm i && pnpm setup:dev",
    "setup:dev": "node --experimental-strip-types tools/chibivue-playground/main.ts",
    "setup:vue": "node --experimental-strip-types tools/vue-playground/main.ts",
    "setup:book": "node --experimental-strip-types tools/create-chibivue/main.ts",
    "dev": "pnpm -F=@examples/playground run dev",
    "dev:app": "pnpm -F=@examples/app run dev",
    "dev:vapor": "pnpm -F=@examples/vapor run dev",
    "dev:vue": "cd examples/vuejs-core && pnpm i && pnpm run dev",
    "build": "rolldown -c",
    "clean": "rimraf packages/*/dist packages/@extensions/*/dist",
    "typecheck": "tsgo --noEmit",
    "lint": "oxlint -c .oxlintrc.json .",
    "lint:fix": "oxlint -c .oxlintrc.json --fix .",
    "fmt": "oxfmt --write .",
    "fmt:check": "oxfmt --check .",
    "test": "vitest run",
    "test:watch": "vitest",
    "check": "pnpm lint && pnpm fmt:check && pnpm typecheck && pnpm build && pnpm test",
    "book:dev": "vitepress dev book/online-book",
    "book:build": "vitepress build book/online-book",
    "book:preview": "vitepress preview book/online-book",
    "book:lint": "textlint book",
    "book:count-chars": "node --experimental-strip-types tools/book-size/book/count-chars.ts",
    "book:translate": "node --experimental-strip-types tools/translator/ja2en/main.ts",
    "book:size": "tokei -f packages > tools/book-size/pkg/files.txt"
  },
  "devDependencies": {
    "@babel/types": "^7.21.2",
    "@types/node": "^22.10.1",
    "@typescript/native-preview": "^7.0.0-dev.20250518.1",
    "@vitejs/plugin-vue": "^5.0.2",
    "@vitest/browser": "^4.0.17",
    "@vitest/browser-playwright": "^4.0.17",
    "chainsi": "^0.0.1",
    "citty": "^0.1.3",
    "consola": "^3.2.3",
    "dotenv": "^16.3.1",
    "fs-extra": "^11.1.1",
    "jsdom": "^26.0.0",
    "oxfmt": "^0.16.0",
    "oxlint": "^1.39.0",
    "rimraf": "^6.0.0",
    "rolldown": "^1.0.0-beta.53",
    "rolldown-plugin-dts": "^0.6.0",
    "textlint": "^14.0.0",
    "textlint-rule-ja-space-between-half-and-full-width": "^2.3.0",
    "textlint-rule-prh": "^6.0.0",
    "typescript": "^5.8.0",
    "vite-hyper-config": "^0.6.0",
    "vite-node": "^3.0.0",
    "vitepress": "^1.6.0",
    "vitepress-plugin-mermaid": "^2.0.16",
    "vitest": "^4.0.0"
  },
  "dependencies": {
    "@babel/parser": "^7.21.2",
    "estree-walker": "^3.0.3",
    "magic-string": "^0.30.0",
    "vite": "^8.0.0-beta.0"
  },
  "resolutions": {
    "cytoscape": "3.31.2"
  }
}
