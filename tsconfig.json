{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "declaration": true,
    "isolatedDeclarations": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
      "@chibivue/*": ["./packages/*/src"],
      "chibivue": ["./packages/chibivue/src"],
      "chibivue-store": ["./packages/@extensions/chibivue-store/src"],
      "chibivue-router": ["./packages/@extensions/chibivue-router/src"],
      "vite-plugin-chibivue": ["./packages/@extensions/vite-plugin-chibivue/src"]
    }
  },
  "include": ["packages/**/*.ts", "examples/**/*.ts", "examples/**/*.vue"],
  "exclude": ["**/node_modules", "**/dist", "examples/vuejs-core"]
}
